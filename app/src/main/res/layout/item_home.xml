<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/HMcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgKost"
            android:src="@drawable/noimage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/HM_judulKost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Nama Kost"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/HM_jarakkost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Jarak Kost"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/HM_hargakost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Harga Kost"
                android:textColor="@color/btn_biru"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>